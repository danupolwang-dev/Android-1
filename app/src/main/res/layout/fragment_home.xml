<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6FF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- ส่วนทักทาย -->
        <TextView
            android:id="@+id/tvWelcome"
            android:text="สวัสดี, test@gmail.com"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTodayExpense"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- การ์ดแสดงข้อความ -->
        <TextView
            android:id="@+id/tvHomeInfo"
            android:text="ยินดีต้อนรับเข้าสู่ระบบจัดการค่าใช้จ่าย"
            android:padding="12dp"
            android:textColor="#333333"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ปุ่มต่างๆ -->
        <Button
            android:id="@+id/btnAddExpense"
            android:text="➕ เพิ่มค่าใช้จ่าย"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7E57C2"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnViewExpenses"
            android:text="📋 ดูรายการ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7E57C2"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnViewStatistics"
            android:text="📊 ดูสถิติ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7E57C2"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
